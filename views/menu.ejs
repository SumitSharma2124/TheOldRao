<section class="menu-page container">
    <h2 class="section-title">Our Menu</h2>

    <!-- FILTER BAR -->
    <div class="menu-filters">
        <div class="filter-chips">
            <button class="filter-btn active" data-category="all">All</button>
            <button class="filter-btn" data-category="snacks">Snacks</button>
            <button class="filter-btn" data-category="main">Main Course</button>
            <button class="filter-btn" data-category="breads">Breads</button>
            <button class="filter-btn" data-category="dessert">Desserts</button>
            <button class="filter-btn" data-category="drinks">Drinks</button>
        </div>
        <div class="menu-controls">
            <input id="menuSearch" type="text" placeholder="Search dishes..." aria-label="Search menu"/>
            <select id="menuSort" aria-label="Sort menu">
                <option value="featured">Featured</option>
                <option value="price-asc">Price: Low to High</option>
                <option value="price-desc">Price: High to Low</option>
                <option value="name-asc">Name: A â†’ Z</option>
            </select>
            <span id="menuCount" class="menu-count"></span>
