    </div>

    <!-- MENU ITEMS WILL RENDER HERE -->
    <div id="menuContainer" class="menu-grid"></div>

    <style>
        .menu-count{ opacity:.7; font-size:.9rem; }
        .menu-filters{ position: sticky; top: calc(var(--header-h) + var(--nav-h) + 8px); z-index: 9; }
        .menu-filters{ display:flex; align-items:center; justify-content:space-between; gap:12px; }
        .filter-chips{ display:flex; gap:10px; flex-wrap:wrap; }
        .menu-controls{ display:flex; gap:10px; align-items:center; flex-wrap:wrap; margin-left:auto; }
        #menuSearch{ padding:8px 10px; border:1px solid #ddd; border-radius:10px; }
        #menuSort{ padding:8px 10px; border:1px solid #ddd; border-radius:10px; }
    </style>
</section>

